<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="emp">

	<!-- 모든 emp 테이블의 회원 가져오기 -->
	<select id="selectAllUser" resultType="empVo">
		select * from emp 
	</select>
	
	<!-- empno 로 1명의 회원정보를 조회하기  -->
	<select id="selectUser" resultType="empVo" parameterType="int">
		select * from emp where empno = #{empno}
	
	</select>
	
	<!-- 페이징처리하기 -->
	<select id="selectPagingEmp" resultType="empVo" parameterType="pageVo">
	SELECT *
	FROM
		(SELECT ROWNUM rn, a.*
    	 FROM  (SELECT * 
    			FROM emp 
    			order by empno ) a 
    			WHERE ROWNUM &lt;= #{page} * #{pasesize} )
	where rn between (#{page}-1)*#{pasesize} + 1 AND  #{page} * #{pasesize}		
	</select>


 </mapper>