<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="users">

  <select id="selectAllUser" resultType="userVo">
    select * from users 
  </select>
	
	
	<select id="selectUser" resultType="userVo" parameterType="String" > 
		select * from users where userid = #{value}
	</select>	
	
	
	<select id="selectPagingUser" resultType="userVo" parameterType="pageVo" >
	SELECT *
	FROM
		(SELECT ROWNUM rn, a.*
    	 FROM  (SELECT * 
    			FROM users 
    			order by userid ) a 
    			WHERE ROWNUM &lt;= #{page} * #{pasesize} )
	where rn between (#{page}-1)*#{pasesize} + 1 AND  #{page} * #{pasesize}  
	
	</select>
	
	<!-- 전체 사용자 수 조회 -->
	<select id="selectAllUserCount" resultType="int">
		SELECT COUNT(*)
		FROM users
	</select>
</mapper>

